# Run with:
# > source setup

unalias cp 2>/dev/null

# Setup oh-my-zsh alias
if [ ! -z $ZSH_CUSTOM ]
then
  for FILE in *.zsh; do
    echo "[*] $FILE -> $ZSH_CUSTOM"
    cp -f $FILE $ZSH_CUSTOM/
  done
  # p10k
  [ -e $HOME/.p10k.zsh ] || ln -s $ZSH_CUSTOM/p10k.zsh $HOME/.p10k.zsh
  echo "[*] zshrc -> $HOME"
  cp -f zshrc $HOME/.zshrc
fi
